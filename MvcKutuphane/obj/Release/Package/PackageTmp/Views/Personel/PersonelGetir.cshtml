@model MvcKutuphane.Models.EntityFramework.TBLPERSONEL
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div class="mw-500 text-center bg-transparent mb-4">
        <h1 class="sketchy text-center">Personel Güncelleme</h1>
    </div>

    <div class="flex_container" style="max-width:1300px">
        <div class="flex_col_0">
            <a href="/Personel/Index" class="btn btn-primary mt-2 ml-2 pl-4 pr-4 float-lg-right">Personeller</a>
            <a href="/Personel/PersonelEkle" class="btn btn-success mt-2 pl-4 pr-4 float-lg-right">Personel Ekle</a>
        </div>
    </div>

    @Html.HiddenFor(x => x.ID)
    <div class="flex_container" style="max-width:1300px">
        <div class="flex_col_0">
            @Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control", required = "required" })
            <br />
        </div>
        <div class="flex_col_0">
            <button class="btn btn-info mt-2 pl-4 pr-4 float-lg-right">Güncelle</button>
        </div>
    </div>

}
