@model MvcKutuphane.Models.EntityFramework.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="mw-500 text-center bg-transparent mb-4 mt-2">
        <h1 class="sketchy text-center">Kategori Güncelleme</h1>
    </div>

    <div class="flex_container" style="max-width:1300px">
        <div class="flex_col_0">
            <a href="/Kategori/Index" class="btn btn-primary mt-2 ml-2 pl-4 pr-4 float-lg-right">Kategoriler</a>
            <a href="/Kategori/KategoriEkle" class="btn btn-success mt-2 pl-4 pr-4 float-lg-right">Kategori Ekle</a>
        </div>
    </div>

    @Html.HiddenFor(x => x.ID)
    <br />
    <div class="flex_container" style="max-width:1300px">
        <div class="flex_col_0">
            @Html.Label("Kategori Çeşidi")
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control", required = "" })
        </div>
        <br />
        <div class="flex_col_0">
            <button class="btn btn-info mt-2 pl-4 pr-4 float-lg-right">Güncelle</button>
        </div>
    </div>
}
