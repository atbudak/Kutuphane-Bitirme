@using MvcKutuphane.Models.EntityFramework
@model List<TBLRESIMLER>
@{
    ViewBag.Title = "SliderResimYukle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" style="max-width:1200px; margin:0 auto;">

        <div class="carousel-item active">
            <img class="d-block w-100" src="~/web/slider_img/default.jpg" style="max-height:50vh;">
        </div>
        @foreach (var a in Model.Where(x => x.DURUM == true))
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="~/web/slider_img/@a.RESIMYOLU" style="max-height:50vh;">
            </div>            
        }

    </div>
    <a class="carousel-control-prev" style="width:30% !important" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" style="width:30% !important" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="container col-sm-4">
    <form action="/Istatistik/Resimyukle" method="post" enctype="multipart/form-data">
        <label class="mt-3">Resim Yükle</label>
        <input type="file" name="RESIMYOLU" id="RESIMYOLU" class="form-control mb-md-3 mt-1" required />
        <label>Detay</label>
        <input type="text" name="RESIMDETAY" class="form-control mb-md-3 mt-1" />
        <label>Silderda Gözükecek Mi?</label>
        @Html.CheckBox("DURUM", true, new { @class = "custom-checkbox" })
        <br />
        <input type="submit" value="Kaydet" class="btn btn-outline-dark" />
    </form>

</div>


