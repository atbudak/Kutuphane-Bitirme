@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<MvcKutuphane.Models.EntityFramework.TBLDUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}

<div class="mw-500 text-center bg-transparent  mt-5 mb-4">
    <h1 class="sketchy text-center">Duyurular</h1>
</div>


<div class="overflow-auto col-lg-12">
    <section class="hold-transition sidebar-mini">
        <div class="wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->

            <section class="content">
                <div class="container-fluid">
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Duyuru Listesi</h3>
                                    <div class="card-tools">
                                        @using (Html.BeginForm("Duyurular", "Panel", FormMethod.Get, new { @class = "mt-3 mb-3" }))
                                        {
                                            <div class="input-group input-group-sm" style="width: 250px;">
                                                @Html.TextBox("search", "", new { placeholder = "Search", @class = "form-control float-right", style = "margin-right:5px" })
                                                <div class="input-group-append">
                                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- /.card-header -->
                                <div class="card-body table-responsive p-0">
                                    <table class="table table-hover text-nowrap">
                                        <thead>
                                            <tr>
                                                <th scope="col">Kategori</th>
                                                <th scope="col">Tarih</th>
                                                <th scope="col">İçerik</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var x in Model)
                                            {
                                                <tr>
                                                    <td>@x.KATEGORI</td>
                                                    <td>@Convert.ToDateTime(x.TARIH).ToString("MM.dd.yyyy")</td>
                                                    <td>@x.ICERIK</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                    <!-- /.row -->
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
    </section>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Duyurular", new { page }))
</div>