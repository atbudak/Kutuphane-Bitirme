@model MvcKutuphane.Models.EntityFramework.TBLUYELER
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("UyeGuncelle", "Uye", FormMethod.Post))
{
    <div class="mw-500 text-center bg-transparent mb-4">
        <h1 class="sketchy text-center">Üye Güncelleme</h1>
    </div>

    <div class="flex_container" style="max-width:1300px">
        <div class="flex_col_0">
            <a href="/Uye/Index" class="btn btn-primary mt-2 ml-2 pl-4 pr-4 float-lg-right">Üyeler</a>
            <a href="/Uye/UyeEkle" class="btn btn-success mt-2 pl-4 pr-4 float-lg-right">Üye Ekle</a>
        </div>
    </div>

    <div class="flex_container" style="width:1300px;">
        <div class="flex_col_1">
            @Html.HiddenFor(x => x.ID)
            <label style="margin-bottom:10px;">Adı</label>
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control", required = "required" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Soyad</label>
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", required = "required" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Mail Adresi</label>
            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control", required = "required", type = "email" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Kullanıcı Adı</label>
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Şifre</label>
            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", required = "required", minlength="6" , maxlength="20" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Telefon</label>
            @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control", type = "number" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Okul</label>
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Fotoğraf</label>
            @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control" })
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Yetki</label>
            <select id="category2" required="" class="form-control" name="YETKILER">
                <option value="Kullanici">Kullanıcı</option>
                <option value="Yetkili">Yetkili</option>
                <option value="Admin">Admin</option>
            </select>
            <span></span>
        </div>
        <br />
        <div class="flex_col_0">

            <button class="btn btn-info mt-2 pl-4 pr-4 float-lg-right">Güncelle</button>
        </div>
    </div>
}



