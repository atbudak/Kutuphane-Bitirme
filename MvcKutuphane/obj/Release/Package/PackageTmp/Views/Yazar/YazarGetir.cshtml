@model MvcKutuphane.Models.EntityFramework.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div class="mw-500 text-center bg-transparent mb-4">
        <h1 class="sketchy text-center">Yazar Güncelle</h1>
    </div>

    <div class="flex_container" style="max-width:1300px">
        <div class="flex_col_0">
            <a href="/Yazar/Index" class="btn btn-primary mt-2 ml-2 mr-2 pl-4 pr-4 float-lg-right">Yazar Listesi</a>
            <a href="/Yazar/YazarEkle" class="btn btn-success mt-2 pl-4 pr-4 float-lg-right">Yazar Ekle</a>
        </div>
    </div>

    @Html.HiddenFor(x => x.ID)
    <br />
    <div class="flex_container" style="width:1300px;">
        <div class="flex_col_1">
            @Html.Label("Yazar Adı")
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control", required = "" })
            <br />
        </div>
        <div class="flex_col_1">
            @Html.Label("Yazar Soyadı")
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", required = "" })
            <br />
        </div>
        <div class="flex_col_0">
            @Html.Label("Detay")
            @Html.TextAreaFor(x => x.DETAY, new { @class = "form-control" })
            <br />
        </div>
        <div class="flex_col_0">
            <button class="btn btn-info mt-2 pl-4 pr-4 float-lg-right">Güncelle</button>
        </div>
    </div>
}
