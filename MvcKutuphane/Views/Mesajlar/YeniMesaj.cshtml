<!DOCTYPE html>

<html>

<head>

    <title>Yeni Mesaj</title>
    <link rel="stylesheet" href="../../plugins/summernote/summernote-bs4.css">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
</head>

<body class="hold-transition sidebar-mini">

    <!-- Navbar -->
    <!-- Main content -->

    <section class="content mt-5">

        <div class="container-fluid">

            <div class="row">

                @Html.Action("Partial1")
                <!-- /.col -->

                <div class="col-md-9">

                    @using (Html.BeginForm("YeniMesaj", "Mesajlar", FormMethod.Post))
                    {
                        <div class="card card-primary card-outline">

                            <div class="card-header">

                                <h3 class="card-title">Yeni Mesaj</h3>

                            </div>

                            <!-- /.card-header -->

                            <div class="card-body">

                                <div class="form-group">


                                    @Html.TextBoxFor(x => x.ALICI, new { @class = "form-control", placeholder = "Kime:" })

                                </div>

                                <div class="form-group">

                                    @Html.TextBoxFor(x => x.KONU, new { @class = "form-control", placeholder = "Konu:" })

                                </div>

                                <div class="form-group">
                                    @Html.TextAreaFor(x => x.ICERIK, new { id = "compose-textarea", @class = "form-control", style = "height: 300px", placeholder = "Mesajınızı Giriniz" })

                                </div>

                                <div class="form-group">

                                    <div class="btn btn-default btn-file">

                                        <i class="fa fa-paperclip"></i> Attachment

                                        <input type="file" name="attachment">

                                    </div>

                                    <p class="help-block">Max. 32MB</p>

                                </div>

                            </div>

                            <!-- /.card-body -->

                            <div class="card-footer">

                                <div class="float-right">

                                    <button type="button" class="btn btn-default"><i class="fa fa-pencil"></i> Taslak</button>

                                    <button type="submit" class="btn btn-primary"><i class="fa fa-envelope"></i> Gönder</button>

                                </div>

                                <button type="reset" class="btn btn-default"><i class="fa fa-times"></i> Kurtul</button>

                            </div>

                            <!-- /.card-footer -->

                        </div>

                        <!-- /.card -->
                    }
                </div>

                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div><!-- /.container-fluid -->

    </section>


    <script src="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {

            //Add text editor

            $('#compose-textarea').summernote()

        })</script>

</body>

</html>



