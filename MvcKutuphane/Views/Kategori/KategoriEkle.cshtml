@model MvcKutuphane.Models.EntityFramework.TBLKATEGORI
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="mw-500 text-center bg-transparent mb-4 mt-2">
    <h1 class="sketchy text-center">Kategori Ekle</h1>
</div>

<div class="flex_container" style="max-width:1300px">
    <div class="flex_col_0">
        <a href="/Kategori/Index" class="btn btn-primary mt-2 ml-2 pl-4 pr-4 float-lg-right">Kategoriler</a>
    </div>
</div>

<form method="post">
    <div class="flex_container" style="max-width:1300px">
        <div class="flex_col_0">
            <label style="margin-bottom:10px;">Kategori Adı</label>
            <input type="text" name="AD" class="form-control form-control" placeholder="Kategori adı giriniz.." required /><br />
        </div>
        <div class="flex_col_0">
            <button class="btn btn-success mt-2 pl-4 pr-4 float-lg-right">Ekle</button>
        </div>
    </div>
</form>
