@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<MvcKutuphane.Models.EntityFramework.TBLKITAP>
@{
    ViewBag.Title = "YazarKitap";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="mw-500 text-center bg-transparent mb-4">
    <h1 class="sketchy text-center">@ViewBag.y1 Kitapları</h1>
</div>

@using (@Html.BeginForm("YazarKitap", "Yazar", FormMethod.Get))
{
    <div class="pull-right">
        <a href="/Yazar/YazarEkle" class="btn btn-success pull-right" style="margin-bottom:15px">Yeni Yazar Ekle</a>
        <a href="/Yazar/Index" class="btn btn-info pull-right mr-3" style="margin-bottom:15px">Yazarları Görüntüle</a>
    </div>
    <div class="Search-Container col-lg-4 col-lg-offset-0" style="display:flex">
        @Html.TextBox("search", "", new { placeholder = "Search", @class = "form-control", style = "margin-right:5px" })
        <input type="submit" class="btn btn-default btn-group-lg" name="search" value="Ara">
    </div>
}
<div class="overflow-auto col-lg-12">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Kitap Adı</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Yayınevi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.ID</td>
                    <td>@x.AD</td>
                    <td>@x.TBLKATEGORI.AD</td>
                    <td>@x.YAYINEVI</td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("YazarKitap", new { page }))
</div>
