@model MvcKutuphane.Models.EntityFramework.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div class="mw-500 text-center bg-transparent mb-4">
        <h1 class="sketchy text-center">Yazar Güncelle</h1>
    </div>
    @Html.HiddenFor(x => x.ID)
    <br />
    @Html.Label("Yazar Adı")
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control", required = "" })
    @*@Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:black;opacity:.7" })*@
    <br />
    @Html.Label("Yazar Soyadı")
    @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", required = "" })
    @*@Html.ValidationMessageFor(x => x.SOYAD, "", new { @style = "color:black;opacity:.7" })*@
    <br />
    @Html.Label("Detay")
    @Html.TextAreaFor(x => x.DETAY, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-info">Güncelle</button>

}
