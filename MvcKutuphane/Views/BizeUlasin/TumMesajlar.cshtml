@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<MvcKutuphane.Models.EntityFramework.TBLILETISIM>

@{
    ViewBag.Title = "TumMesajlar";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="mw-500 text-center bg-transparent">
    <h1 class="sketchy text-center">Bütün Mesajlar</h1>
</div>
<br />
<br />
@using (@Html.BeginForm("TumMesajlar", "BizeUlasin", FormMethod.Get))
{
    <div class="pull-right">
        <a href="/BizeUlasin/Index" class="btn btn-info pull-right" style="margin-bottom:15px">Yeni Mesajları Görüntüle</a>
    </div>
    <div class="Search-Container col-lg-4 col-lg-offset-0" style="display:flex">
        @Html.TextBox("search", "", new { placeholder = "Search", @class = "form-control", style = "margin-right:5px" })
        <input type="submit" class="btn btn-default btn-group-lg" name="search" value="Ara">
    </div>
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Mail Adresi</th>
            <th scope="col">Konu</th>
            <th scope="col">Mesaj</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ID</td>
                <td>@x.AD</td>
                <td>@x.SOYAD</td>
                <td>@x.MAIL</td>
                <td>@x.KONU</td>
                <td>@x.MESAJ</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
