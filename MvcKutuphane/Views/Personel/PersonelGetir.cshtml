@model MvcKutuphane.Models.EntityFramework.TBLPERSONEL
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
<div class="mw-500 text-center bg-transparent mb-4">
    <h1 class="sketchy text-center">Personel Güncelleme</h1>
</div>
    @Html.HiddenFor(x => x.ID)
    <br />
    @Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control", required = "required" })
    @*@Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:black;opacity:.7" })*@
    <br />
    <br />
    <button class="btn btn-info">Güncelle</button>

}
