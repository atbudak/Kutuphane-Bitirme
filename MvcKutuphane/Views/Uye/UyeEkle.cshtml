@model MvcKutuphane.Models.EntityFramework.TBLUYELER
@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="mw-500 text-center bg-transparent mb-4">
    <h1 class="sketchy text-center">Üye Ekle</h1>
</div>
<form method="post">
    <div class="flex_container" style="width:1300px;">
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Adı</label>
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control", placeholder = "adı giriniz...", required = "required" })
            @*@Html.ValidationMessageFor(x => x.AD, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Soyadı</label>
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", placeholder = "soyadını giriniz...", required = "required" })
            @*@Html.ValidationMessageFor(x => x.SOYAD, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Mail Adresi</label>
            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control", placeholder = "mail adresi giriniz...", required = "required" })
            @*@Html.ValidationMessageFor(x => x.MAIL, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Kullanıcı Adı</label>
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control", placeholder = "kullanıcı adı giriniz...", required = "required" })
            @*@Html.ValidationMessageFor(x => x.KULLANICIADI, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Şifre</label>
            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", placeholder = "şifre giriniz...", required = "required" })
            @*@Html.ValidationMessageFor(x => x.SIFRE, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Telefon</label>
            @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control", placeholder = "telefon giriniz..." })
            @*@Html.ValidationMessageFor(x => x.TELEFON, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Okul</label>
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control", placeholder = "okul giriniz..." })
            @*@Html.ValidationMessageFor(x => x.OKUL, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>
        <div class="flex_col_1">
            <label style="margin-bottom:10px;">Fotoğraf Linki</label>
            @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control", placeholder = "resim linkini buraya yapıştırınız..." })
            @*@Html.ValidationMessageFor(x => x.FOTOGRAF, "", new { @style = "color:black;opacity:.7" })*@
            <br />
        </div>

        <div class="flex_col_0">
            <button class="btn btn-success mt-2 pl-4 pr-4 float-lg-right" style="margin:10px 0">Ekle</button>
            <div />
        </div>
    </div>
</form>